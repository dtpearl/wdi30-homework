<h2>New Ocean</h2>

<form action="<%= oceans_path %>" method="post">
    <label>Name:</label>
    <input type="text" name="name" required>
    <label>Image:</label>
    <input type="url" name="image" required>
    <label>Area:</label>
    <input type="float" name="area">
    <label>Volume:</label>
    <input type="float" name="volume">
    <label>Average Depth:</label>
    <input type="number" name="ave_depth">
    
    <button class="create">Create Ocean</button>
</form>