<h2>Edit Pokemon</h2>

<form action="/pokedex/<%= @pokemon["id"] %>" method="post">
  <div class="form">
    <label>Name:</label>
    <input type="text" name="name" value="<%= @pokemon["name"] %>" placeholder="Bulbasaur" required>
  </div>
  <div class="form">
    <label>Type:</label>
    <input type="text" name="type" value="<%= @pokemon["type"] %>" placeholder="Grass" required>
  </div>
  <div class="form">
    <label>Evolves:</label>
    <input type="number" name="evolves" value="<%= @pokemon["evolves"] %>" placeholder="1" required>
  </div>
  <div class="form">
    <label>Image:</label>
    <input type="text" name="image" value="<%= @pokemon["image"] %>" placeholder="http://...">
  </div>

  <button>Save Pokemon</button>
</form>
