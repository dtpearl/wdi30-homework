<form action="<%= mountain_path(@mountain.id) %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" required value="<%= @mountain.name %>">
  <label>Country:</label>
  <input type="text" name="country" placeholder="Nepal" required value="<%= @mountain.country %>">
  <label>Height (m):</label>
  <input type="number" name="height" value="<%= @mountain.height %>" step="0.01">
  <label>Mountain Range:</label>
  <input type="text" name="mountain_range" placeholder="Himalayas" value="<%= @mountain.mountain_range %>">
  <label>Image:</label>
  <input type="url" name="image" value="<%= @mountain.image %>">
  <button>Update mountain</button>
</form>
