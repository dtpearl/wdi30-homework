<h2>Edit City</h2>

<form action="/cities/<%= @city["id"]%>" method="post">

<label>Name:</label>
<input type="text" name="name" value="<%= @city["name"] %>" placeholder="City name" required autofocus>
<label>Landmark:</label>
<input type="url" name="landmark" value="<%= @city["landmark"] %>" placeholder="http://...">
<label>Image:</label>
<input type="url" name="image" value="<%= @city["image"] %>" placeholder="http://...">
<label>Country</label>
<select name="country_id">
  <option></option>
  <% Country.all.each do |country| %>
    <option value="<%= country["id"]%>"><%= country["name"]%></option>
  <% end %>
</select>
<button>Update</button>
</form>
