<h2>Edit Book</h2>

<form action="/books/<%= @book["id"] %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @book["name"] %>" placeholder="Book name" required autofocus>
  <label>Image:</label>
  <input type="url" name="image" value="<%= @book["image"] %>" placeholder="http://...">

  <label>Author:</label>
  <select name="author_id">
    <option></option>
    <% Author.all.each do |author| %>
      <option value="<%= author["id"] %>" <%= "selected" if author.id == @book.author_id %>>
        <%= author["name"] %>
      </option>
    <% end %>
  </select>

  <button>Update</button>
</form>
