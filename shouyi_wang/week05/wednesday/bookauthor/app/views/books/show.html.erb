<h2><%= @book.name %></h2>
<%= image_tag @book.image, :alt => @book.name, :class => 'feature' %>
<% if @book.author.present? %>
    <li>Author: <%= link_to @book.author.name, @book.author %></li>
  <% end %>

<div class="controls">
  <%= link_to 'Edit book', edit_book_path(@book) %>
  <%= link_to 'Delete book', @book, :method => 'delete' %>
</div>
