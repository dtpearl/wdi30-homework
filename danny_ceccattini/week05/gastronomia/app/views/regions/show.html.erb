<h2><%= @region.name %></h2>

<%= image_tag @region.flag, :class => 'flag' %>
<%= image_tag @region.image, :class => 'feature'%>
<ul>
  <li>Capital: <%= @region.capital %></li>
  <li>Population: <%= number_to_human @region.population %></li>
</ul>

<!-- XXX LIST OF DISHES -->
<% @region.dishes.each do |dish| %>
  <li> <%= dish.name %></li>
  <%= link_to image_tag(dish.image, :class => 'thumb_show'), dish %>
<% end %>

<div class="controls">
  <%= link_to "Edit Region", edit_region_path(@region) %>
  <%= link_to "Delete Region", @region, :method => 'delete' %>
</div>
