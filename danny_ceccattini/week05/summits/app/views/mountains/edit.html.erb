<form action="<%= mountain_path(@mountain.id) %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @mountain.name %>" required autofocus>
  <label>Location:</label>
  <input type="text" name="location" value="<%= @mountain.location %>" required>
  <label>Height</label>
  <input type="number" name="height" value="<%= @mountain.height %>" required>
  <label>Image:</label>
  <input type="text" name="image" value="<%= @mountain.image %>" required>
  <label>First Climber:</label>
  <input type="text" name="white_man" value="<%= @mountain.white_man %>" required>

  <button>Let's Make It Higher!</button>
</form>
