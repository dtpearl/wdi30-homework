<h2>EDIT   CHEESE</h2>

<form action="/cheeses/<%= @cheese["id"] %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @cheese["name"] %>" placeholder="New name">
  <label>Province:</label>
  <input type="text" name="province" value="<%= @cheese["province"] %>" placeholder="New province">
  <label>Region:</label>
  <input type="text" name="region" value="<%= @cheese["region"]%>" placeholder="New region">
  <label>Image:</label>
  <input type="text" name="image" value="<% @cheese["image"] %>" placeholder="http://...">
  <button>Update!</button>
</form>
