<h2>Create a team</h2>

<form action="/new_team" method="post">
  <div class="form-row">
    <label for="name">Name: </label>
    <input type="text" name="name" placeholder="team name.." required>
  </div>

  <div class="form-row">
    <label for="city">City: </label>
    <input type="text" name="city" placeholder="city of the team.." required>
  </div>

  <div class="form-row">
    <label for="stadium">Stadium: </label>
    <input type="text" name="stadium" placeholder="stadium.." required>
  </div>

  <div class="form-row">
    <label for="stadium_capacity">Stadium Capacity: </label>
    <input type="text" name="stadium_capacity" placeholder="stadium capacity.." required>
  </div>

  <div class="form-row">
    <label for="last_rank">Last Season Standing: </label>
    <input type="text" name="last_rank" placeholder="last season standing.." required>
  </div>

  <div class="form-row">
    <label for="title">Title Won: </label>
    <input type="text" name="title" placeholder="title won.." required>
  </div>

  <div class="form-row">
    <label for="logo">Logo URL: </label>
    <input type="URL" name="logo" placeholder="Http://..." required>
  </div>
  <button>Submit</button>
</form>
