<h3><%= @player.name %></h3>

<div class="mdl-card--border	mdl-shadow--2dp">
<%= image_tag @player.image if @player.image.present? %>
<p>Name: <%= @player.name %></p>
<p>Position: <%= @player.position %></p>
<p>Nation: <%= @player.nation %></p>
<p>Team: <%= @player.team.name if @player.team_id.present? %></p>
<p>Age: <%= @player.age %></p>
<p>Rating: <%= @player.rating %></p>
</div>

<div class="controls">
  <%= link_to 'Edit Player', edit_player_path(@player), :class=>"mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>

  <%= link_to 'Delete player', player_path(@player.id), :method=>"delete", :class=>"mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
</div>
