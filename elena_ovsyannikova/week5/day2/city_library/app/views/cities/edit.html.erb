<h1>Edit City</h1>

<form action="<%= city_path(@city.id) %>" method="post">
<label>Name: </label>
<input type="text" name="name" value="<%= @city.name %>" required>
<label>Image: </label>
<input type="url" name="image" value="<%= @city.image %>">
<label>Population: </label>
<input type="number" name="population" value="<%= @city.population %>">
<label>Square: </label>
<input type="number" name="square" value="<%= @city.square %>">
<label>Country: </label>
<input type="text" name="country" value="<%= @city.country %>">
<button>Edit city</button>

</form>
