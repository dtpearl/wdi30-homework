<h2>New Butterfly</h2>

<form action="/butterflies/<%= @butterfly["id"] %>" method="post">

  <label>Name:</label>
  <input type="text" name="<%= @butterfly["name"] %>" placeholder="Butterfly name" required autofocus>
  <label>Family:</label>
  <input type="text" name="<%= @butterfly["family"] %>" placeholder="Family name" required>
  <label>Image:</label>
  <input type="url" name="<%= @butterfly["image"] %>" placeholder="http://...">
  <button>Create</button>

</form>
