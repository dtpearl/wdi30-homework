<h2><%= @album.title %></h2>

<%= image_tag @album.cover, :class => 'feature'%>

<ul>
  <% if @album.band.present? %>
  <li>Band: <%= link_to @album.band.name, @album.band %></li>
  <% end %>
  <li>Year: <%= @album.year %></li>
  <li>Songs: <%= @album.songs %></li>
  <li>Length: <%= @album.length %></li>

</ul>

<div class="controls">
  <%= link_to 'Edit Album', edit_album_path(@album) %>
  <%= link_to 'Delete Album', @album, :method => 'delete' %>
</div>
