<%= form_for @band do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, :autofocus => true, :required => true %>

  <%= f.label :country %>
  <%= f.text_field :country %>

  <%= f.label :genre %>
  <%= f.text_field :genre %>

  <%= f.label :followers %>
  <%= f.text_field :followers %>

  <%= f.label :image %>
  <%= f.text_field :image %>

  <%= f.submit %>
<% end %>
