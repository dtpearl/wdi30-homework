<!DOCTYPE html>
<html>
  <head>
    <title>Mountains</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="mainNav">

      <%= image_tag("mountain_logo.png", :class => 'navLogo', :alt => "Mountain Tracker Logo") %>

    <div class="nav-links">
      <%= link_to 'Home', root_path, class: "navItem" %>
      <%= link_to 'All Mountains', mountains_path, class: "navItem" %>
      <%= link_to 'New Mountain', mountains_new_path, class: "navItem" %>
      </div>
      
    </nav>
    <div class="container">
    <h1>Mountains</h1>
    <%= yield %>
    </div>
  </body>
</html>
