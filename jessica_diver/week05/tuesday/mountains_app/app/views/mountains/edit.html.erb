<h2>Edit mountain</h2>

<form action="<%= mountain_path(@mountain.id) %>" method="post">

  <label>Name: </label>
  <input type="text" name="name" value="<%= @mountain.name %>" required>

  <label>Ranking: </label>
  <input type="number" name="ranking" value="<%= @mountain.ranking %>">

  <label>Height: </label>
  <input type="number" name="height" value="<%= @mountain.height %>" required>

  <label>Country: </label>
  <input type="text" name="country" value="<%= @mountain.country %>" required>

  <label>Image: </label>
  <input type="url" name="image" value="<%= @mountain.image %>">

  <button>Edit mountain</button>

</form>
