<h2>Edit your city:</h2>

<form action="/cities/<%= @city["id"] %>" method="post">
  <label for="">City: </label>
  <input type="text" name="city" value="<%= @city["city"]%>" placeholder="Enter city here" required autofocus>

  <label for="">Country: </label>
  <input type="text" name="country" value="<%= @city["country"]%>" placeholder="Enter country here">

  <label for="">Year Visited: </label>
  <input type="year" name="year" value="<%= @city["year"]%>" placeholder="Enter year here">

  <label for="">Image: </label>
  <input type="text" name="image" value="<%= @city["image"]%>" placeholder="http://...">

  <button>Update city</button>

</form>
