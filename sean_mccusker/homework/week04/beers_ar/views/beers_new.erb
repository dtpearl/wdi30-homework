<h2>New Beer</h2>

<form action="/beers/" method="post">
  <label>Name:</label>
  <input type="text" name="name" placeholder="Beer name" required autofocus>
  <label>Brewer:</label>
  <input type="text" name="brewer" placeholder="Brewer name" required>
  <label>Image:</label>
  <input type="url" name="image" placeholder="http://...">

  <label>Hop:</label>
    <select name="hop_id"> <!-- # hops_id ? -->
      <option></option>
      <% Hop.all.each do |hop| %>
      <option value="<%= hop["id"] %>"><%= hop["name"] %></option>
  <% end %>
</select>

<button>Create</button>
</form>
