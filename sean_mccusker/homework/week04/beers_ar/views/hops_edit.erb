<h2>Edit Hops</h2>

<form action="/hops/<%= @hop.id %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @hop.name %>" placeholder="Hop name" required autofocus>
  <label>Image:</label>
  <input type="url" name="image" value="<%= @hop.image %>" placeholder="http://...">
  <button>Update</button>
</form>
