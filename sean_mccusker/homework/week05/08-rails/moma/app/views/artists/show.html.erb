<h2><%= @artist.name %></h2>
<%= image_tag @artist.image, :class => 'feature' %>
<ul>
  <li>Name: <%= @artist.name %></li>
  <li>Nationality: <%= @artist.nationality %></li>
  <li>Date of birth: <%= @artist.dob.strftime('%A, %B %e, %Y') if @artist.dob.present? %></li>
  <li>Period: <%= @artist.period %></li>
</ul>

<% @artist.works.each do |work| %>
  <%= link_to image_tag(work.image, :class => 'thumb'), work %>
<% end %>

<div class="controls">
  <%= link_to 'Edit artist', edit_artist_path(@artist) %>
  <%= link_to 'Delete artist', @artist, :method => 'delete' %>
</div>
