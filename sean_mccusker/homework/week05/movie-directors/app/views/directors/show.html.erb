<h2><%= @director.name %></h2>
<%= image_tag @director.image, :class => 'feature' %>
<ul>
  <li>Name: <%= @director.name %></li>
  <li>Birthplace: <%= @director.birth_place %></li>
  <li>Date of birth: <%= @director.dob.strftime('%A, %B %e, %Y') if @director.dob.present? %></li>

</ul>

<% @director.films.each do |film| %>
<%= link_to film.title, film %>
<% end %>

<div class="controls">
  <%= link_to 'Edit director', edit_director_path(@director) %>
  <%= link_to 'Delete director', @director, :method => 'delete' %>
</div>
