<h1>New Mountain</h1>

<form action="<%= mountains_path %>" method="post">
<label>Name:</label>
<input type="text" name="name" required>
<label>Image:</label>
<input type="url" name="image">
<label>Country:</label>
<input type="text" name="country">
<label>Height:</label>
<input type="number" name="height">
<label>Mountain Range</label>
<input type="text" name="mountain range">
<label>Age:</label>
<input type="number" name="age">

<button>Create mountain</button>
</form>
