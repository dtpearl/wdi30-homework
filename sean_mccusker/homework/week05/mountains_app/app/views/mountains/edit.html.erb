<h1>Edit Mountains</h1>

<form action="<%= mountain_path(@mountain.id) %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @mountain.name %>" required>
  <label>Image:</label>
  <input type="url" name="image" value="<%= @mountain.image %>">
  <label>Country:</label>
  <input type="text" name="country" value="<%= @mountain.country %>">
  <label>Height:</label>
  <input type="number" name="height" value="<%= @mountain.height %>">
  <label>Mountain Range</label>
  <input type="text" name="mountain_range" value="<%= @mountain.mountain_range %>">
  <label>Age:</label>
  <input type="number" name="age" value="<%= @mountain.age %>">

  <button>Update mountain</button>
</form>
