<h2>Edit Animation</h2>

<form action="/animations/<%= @animation["id"] %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @animation["name"] %>" placeholder="Animation name" required autofocus>
  <label>Image:</label>
  <input type="url" name="image" value="<%= @animation["image"] %>" placeholder="http://...">

  <label>Publish Author:</label>
  <select name="author_id">
    <option></option>
    <% Author.all.each do |author| %>
      <option value="<%= author["id"] %>" <%= "selected" if author.id == @animation.author_id %>>
        <%= author["name"] %>
      </option>
    <% end %>
  </select>

  <button>Update</button>
</form>
