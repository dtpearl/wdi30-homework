<h2><%= @author["name"] %></h2>

<% unless @author.animations.empty? %>
  <h3>Published Animations:</h3>
  <ul>
    <% @author.animations.each do |animation| %>
      <li>
        <a href="/animations/<%= animation.id %>">
          <%= animation.name %>
        </a>
      </li>
    <% end %>
  </ul>
<% end %>

<% unless @author["image"].nil? %>
  <img class="feature" src="<%= @author["image"] %>" alt="<%= @author["name"] %>">
<% end %>

<div class="controls">
  <a href="/authors/<%= @author["id"] %>/edit">Edit Author</a>
  <a href="/authors/<%= @author["id"] %>/delete">Delete Author</a>
</div>
