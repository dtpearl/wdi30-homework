<h2>Edit Butterfly</h2>

<form action="/cats/<%= @cat["id"] %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @cat["name"] %>" placeholder="Cat name" required autofocus>
  <label>Family:</label>
  <input type="text" name="family" value="<%= @cat["family"] %>" placeholder="Family name" required>
  <label>Image:</label>
  <input type="url" name="image" value="<%= @cat["image"] %>" placeholder="http://...">
  <button>Update</button>
</form>
